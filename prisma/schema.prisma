generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model product {
  id Int @id @default(autoincrement())
  name String
  description String
  price Float
}

model Client {
  id        Int    @id @default(autoincrement())
  name      String
  birthday  DateTime
  whatsapp  String
  address   String

  Order Order[]
}

model Order {
  id             Int       @id @default(autoincrement())
  clientId       Int
  client       Client  @relation(fields: [clientId], references: [id])
  date           DateTime
  orderNumber    String
  deliveryMethod String
  paymentMethod  String
  deliveryConfirmed Boolean
}