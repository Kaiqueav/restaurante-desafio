generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model product {
  id Int @id @default(autoincrement())
  name String
  description String
  price Float
  type ProdutoTipo
}

model Order {
  id             Int       @id @default(autoincrement())
  clientId       Int
  client         String
  date           DateTime
  orderNumber    String
  deliveryMethod DeliveryMethod
  paymentMethod  PaymentMethod
  deliveryConfirmed Boolean @default(false)
}
enum ProdutoTipo {
  MARMITA_COMPLETA
  MARMITA_REFRI
  MARMITA_SUCO
}
enum DeliveryMethod {
  DELIVERY
  RETIRADA
}
enum  PaymentMethod {
  PIX
  DINHEIRO
  CARTAO
}